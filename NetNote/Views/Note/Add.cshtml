@{
    var types = ViewBag.Types as IEnumerable<SelectListItem>;
}

@model NetNote.ViewModels.NoteModel

<div class="container-fluid">
    <div class="row" style="margin-top: 10px; margin-bottom:10px;">
        <form method="post" asp-action="Add">
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" type="text" placeholder="Title" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Content"></label>
                <textarea asp-for="Content" data-provide="markdown" rows="10" cols="50" class="form-control"></textarea>
            </div>

            <div class="form-group">
                <label asp-for="TypeId"></label>
                <select asp-for="TypeId"  asp-items="types" class="form-control"></select>
            </div>
            <hr />
            <p>
                <button type="submit" class="btn btn-light">Save</button>
            </p>
        </form>
    </div>
</div>
